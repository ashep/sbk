{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ashep/sbk/config/config.schema.json",
  "type": "object",
  "properties": {
    "files": {
      "type": "object",
      "required": ["sources", "destination"],
      "properties": {
        "sources": {
          "description": "List of sources to backup, in rdiff-backup format",
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "destination": {
          "description": "Backup destination, in rdiff-backup format",
          "type": "string",
          "minLength": 1
        },
        "exclude": {
          "description": "Exclude rules, in rdiff-backup format",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "verbosity": {
          "description": "rdiff-backup verbosity level",
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        }
      }
    },
    "mysql": {
      "type": "object",
      "required": ["sources", "destination"],
      "properties": {
        "sources": {
          "description": "List of databases to backup",
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": ["host", "port", "user", "password", "database"],
            "properties": {
              "host": {
                "type": "string",
                "minLength": 1
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "user": {
                "type": "string",
                "minLength": 1
              },
              "password": {
                "type": "string",
                "minLength": 1
              },
              "database": {
                "type": "string",
                "minLength": 1
              },
              "gzip": {
                "type": "boolean",
                "default": true
              }
            }
          }
        },
        "destination": {
          "description": "Target directory",
          "type": "string",
          "minLength": 1
        }
      }
    },
    "logDir": {
      "description": "Path to the log directory",
      "type": "string",
      "minLength": 1,
      "default": "./log"
    },
    "notifications": {
      "type": "object",
      "properties": {
        "telegram": {
          "type": "object",
          "required": ["token", "chat_id"],
          "properties": {
            "token": {
              "type": "string",
              "minLength": 43,
              "maxLength": 45
            },
            "chat_id": {
              "type": "string",
              "minLength": 3
            }
          }
        }
      }
    }
  }
}